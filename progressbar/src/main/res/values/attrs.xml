<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PercentProgressBar">
        <attr name="barHeight" format="dimension" />
        <attr name="borderSize" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="radius" format="dimension" />
        <attr name="max" format="integer" />
        <attr name="percent" format="float" />
        <attr name="direction" format="enum">
            <enum name="LEFT_TO_RIGHT" value="0" />
            <enum name="RIGHT_TO_LEFT" value="1" />
        </attr>
        <attr name="textSize" format="dimension" />
        <attr name="progressColor" format="color" />
        <attr name="backgroundColor" format="color" />
        <attr name="remainMode" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircularPercentProgressBar">
        <attr name="totalValue" format="integer" />
        <attr name="totalColor" format="color" />
        <attr name="totalWidth" format="dimension" />
        <attr name="clockwise" format="boolean" />

        <attr name="progressValue" format="integer" />
        <attr name="circularProgressColor" format="color" />
        <attr name="progressWidth" format="dimension" />
        <attr name="progressRoundCap" format="boolean" />

        <attr name="progressTextEnabled" format="boolean" />
        <attr name="progressTextType" format="enum">
            <enum name="progress" value="0" />
            <enum name="percent" value="1" />
        </attr>
        <attr name="progressTextSize" format="dimension" />
        <attr name="progressTextColor" format="color" />
        <attr name="progressInterpolator" format="reference" />

        <attr name="fillColor" format="color" />

        <attr name="startAngle" format="float" />

        <attr name="animate" format="boolean" />
        <attr name="animateDuration" format="integer" />
    </declare-styleable>
</resources>